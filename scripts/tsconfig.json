{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../types",
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": false,
    "allowJs": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["webpack-env", "jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "files": ["../packages/index.ts"],
  "exclude": ["node_modules"]
}
